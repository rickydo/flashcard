<div class="container">
	<div class="content">
		<h1 class="card_title"><%= @set.name %></h1>
		<% if @set.name == "Math" %>
			<p class="numbers"><%=rand(1..5).to_s + " + " + rand(1..5).to_s%></p>
			<%= link_to "<div class='arrow_right'></div>".html_safe, "" %>
		<% elsif @set.name == "Alphabet" %>
			<p class="alphabet"><%= @card.text %></p>
			<img src="<%= @card.image_url %>">
		<% elsif @card.image_url %>
			<p><%= @card.text %></p>
			<img src="<%= @card.image_url %>">
		<% else %>
			<p class="big_words"><%= @card.text %></p>
		<% end %>
				
		
		<% if @set.name != "Math" %>
			<%= link_to "<div class='arrow_right'></div>".html_safe, flashcard_set_card_path(@set, next_card), id: "next_card"%>
		<% end %>
	</div>
</div>