<div class="container">
	<h1><%= @set.name %></h1>
	<% if @set.name == "Math" %>
		<p><%=rand(1..5).to_s + " + " + rand(1..5).to_s%></p>
		<%= link_to "Next", "" %>
	<% else %>
		<p><%= @card.text %></p>
		<img src="<%= @card.image_url %>">
		<%= link_to 'Next', flashcard_set_card_path(@set, next_card)%>
	<% end %>
</div>